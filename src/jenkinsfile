pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('version'){
            steps{
                sh 'python3 --version'
            }
        }

    stage('Create Virtual Environment') {
        steps {
        sh 'python3 -m venv env'
        }
    }

    stage('Install Dependencies') {
        steps {
        sh 'env/bin/pip install -r requirements.txt'
    }
}

    stage('Run Tests') {
        steps {
            sh 'env/bin/python -m unittest discover -s bin -p "test_*.py"'
    }
}

    stage('Run Application') {
        steps {
            sh 'env/bin/python src/app.py'
        }
    }
}
}
